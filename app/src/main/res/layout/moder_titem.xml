<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="2dp"
        card:cardMaxElevation="10dp"

        card:cardElevation="5dp"
        card:cardCornerRadius="8dp"
        android:layout_gravity="center_horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/iconforpr"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"

               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/NameCr"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Credit for TV"
                       android:textSize="18sp"
                       android:layout_marginTop="5dp"
                       android:textColor="@color/black_for_glavniy_text"/>
                   <TextView
                       android:id="@+id/procent_of_credit"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:textColor="@color/black_for_glavniy_text"
                       android:text="10%"
                       android:layout_marginTop="5dp"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentEnd="true" />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="10000$"
                   android:textSize="12sp"
                   android:gravity="bottom"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:textColor="@color/green_light"
                   android:id="@+id/total_value"
                   android:layout_alignBottom="@+id/textView5"
                   android:layout_alignParentTop="true" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Total credit value:"
                   android:textSize="12sp"
                   android:textColor="@color/for_darker"
                   android:id="@+id/textView5"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_toLeftOf="@+id/total_value"
                   android:layout_toStartOf="@+id/total_value" />
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp"
                   android:layout_marginBottom="8dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/total_paid"
                       android:textSize="12sp"
                       android:textColor="@color/for_darker"
                       android:id="@+id/textView6"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentLeft="true"
                       android:layout_alignParentStart="true"
                       android:layout_toLeftOf="@+id/totalpayd"
                       android:layout_toStartOf="@+id/totalpayd" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="2490$"
                       android:textSize="12sp"
                       android:gravity="bottom"
                       android:textColor="@color/green_light"
                       android:id="@+id/totalpayd"
                       android:layout_alignParentTop="true"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentEnd="true" />

               </RelativeLayout>
           </LinearLayout>
           
       </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/green_light_forline"


            android:layout_marginTop="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:paddingTop="6dp"
            android:background="@color/grey_light2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/relativeLayout">
                <RelativeLayout
                    android:id="@+id/rela2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/realrt1"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taken date :"
                        android:textSize="12sp"
                        android:textColor="@color/for_darker"
                        android:id="@+id/dateay"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18.06.2016"
                        android:textSize="12sp"
                        android:gravity="bottom"
                        android:textColor="@color/black_for_glavniy_text"
                        android:id="@+id/date_start"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/realrt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 year 24 moth"
                        android:textSize="12sp"
                        android:gravity="bottom"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black_for_glavniy_text"
                        android:id="@+id/left_date"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left:"
                        android:textSize="12sp"
                        android:textColor="@color/for_darker"
                        android:id="@+id/textView2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/left_date"
                        android:layout_toStartOf="@+id/left_date" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/rela2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1240$"
                        android:textSize="12sp"
                        android:gravity="bottom"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/red"
                        android:id="@+id/overallpay"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verall_debt"
                        android:textSize="12sp"
                        android:textColor="@color/for_darker"
                        android:id="@+id/textView3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/overallpay"
                        android:layout_toStartOf="@+id/overallpay" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"


            android:id="@+id/frameLayout"
            android:paddingRight="16dp"
            android:background="@color/grey_light2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/relativeLayout">
            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/knopka_zeleniy"
                android:text="PAY"
                android:layout_marginBottom="16dp"

                android:textColor="@color/green_light"
                android:textSize="12sp"

                />
        </RelativeLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
