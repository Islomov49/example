<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jim.pocketaccounter.InfoCreditFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:layout_above="@+id/realitver"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativprosto"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/name_of_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="Credit for Tv"
                    android:textColor="@color/black_for_glavniy_text"
                    android:layout_toLeftOf="@+id/icon_credit"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/left_amuont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_below="@+id/name_of_credit"
                    android:textColor="@color/forlines"
                    android:text="Left amount :"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/value_period_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_amuont"
                    android:text="360$"
                    android:paddingRight="10dp"
                    android:textSize="36sp"
                    android:textColor="@color/red"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/icon_credit"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:id="@+id/linearforline"
                    android:layout_below="@+id/value_period_credit"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:orientation="horizontal"
                    >
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/green_light_forline"/>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/icon_credit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/iconforpr"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                     />
                <RelativeLayout
                    android:id="@+id/relativprosto2"
                    android:layout_below="@+id/linearforline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/forlines"
                        android:text="Period ends :"
                        android:id="@+id/textView8" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="17 days"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/textView8"
                        android:layout_toEndOf="@+id/textView8" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey_light">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/black_for_glavniy_text"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/knopka_zeleniy"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="PAY"
                        android:textSize="14sp"
                        android:textColor="@color/green_light"/>
                </FrameLayout>

            </RelativeLayout>
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/black_for_secondary_text"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_for_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    <RelativeLayout
        android:id="@+id/realitver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1840$"
            android:textColor="@color/green_light"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/total_transaction" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="right"
            android:textColor="@color/black_for_glavniy_text"
            android:text="Total :"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/total_transaction"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
