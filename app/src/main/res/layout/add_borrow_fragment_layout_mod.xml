<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jim.pocketaccounter.AddCreditFragment"
    android:background="#fff"
    android:id="@+id/pustoyy">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@color/grey_light"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivBorrowAddPopup"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:border_width="2px"
                    app:border_color="@color/green_light_forline"
                    app:border_overlay="true"
                        />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name "
                        android:textSize="20sp"
                        android:textColor="#212121"
                        android:id="@+id/name_text_view"
                        android:layout_marginTop="29dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="add name who is it?"
                        android:layout_below="@+id/name_text_view"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textColorHint="@color/black_for_secondary_text"
                        android:id="@+id/etBorrowAddPopupName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <FrameLayout
                        android:id="@+id/btBorrowAddPopupContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rounded_rectangle_1"
                        android:layout_alignBottom="@+id/name_text_view"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FROM CONTACT"
                            android:textSize="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/green_light"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"/>
                    </FrameLayout>
                </RelativeLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/green_light_forline"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="Phone number"
                        android:layout_marginRight="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/green_light_forline"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/etBorrowAddPopupNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="how much value of debt?"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="Value of debt"
                        android:layout_marginRight="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/green_light_forline"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/spBorrowAddPopupValyuta"
                        android:layout_marginTop="14dp"

                        ></Spinner>

                    <EditText
                        android:id="@+id/etBorrowAddPopupSumm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="how much value of debt?"
                        android:text=""
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/spBorrowAddPopupValyuta"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="Date"
                        android:layout_marginRight="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/green_light_forline"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etBorrowAddPopupDataGet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="when get ?"
                        android:focusableInTouchMode="false"
                        android:textSize="14sp"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ikitar"
                        android:padding="5dp"
                        android:id="@+id/imageView2" />
                    <EditText
                        android:id="@+id/etBorrowAddPopupDataRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="when repeat?"
                        android:focusableInTouchMode="false"
                        android:textSize="14sp"
                        android:layout_marginLeft="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="Transactions"
                        android:layout_marginRight="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/green_light_forline"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Operations are included in the balance?"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:id="@+id/textView4"
                        android:layout_toLeftOf="@+id/chbAddDebtBorrowCalculate"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <CheckBox
                        android:id="@+id/chbAddDebtBorrowCalculate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_alignBottom="@+id/textView4"
                        android:text=""
                        android:checked="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etDebtBorrowFirstPay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="How much you paid?"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/spBorrowAddPopupAccount"
                        android:layout_toStartOf="@+id/spBorrowAddPopupAccount"
                        android:layout_marginRight="6dp"
                        android:inputType="numberDecimal"
                        />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/spBorrowAddPopupAccount"
                        android:layout_marginTop="14dp"

                        ></Spinner>


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/green_light_forline"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
