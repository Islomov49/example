<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.jim.pocketaccounter.CreditFragment">
    <FrameLayout
        android:id="@+id/aaak"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.melnykov.fab.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/savaas">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:scrollbars="vertical"
                tools:context=".MainActivity"
                tools:listitem="@layout/cred_titem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </com.melnykov.fab.ObservableScrollView>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/currency_add"
            fab:fab_colorNormal="@color/blue_color"
            fab:fab_colorPressed="@color/blue_color_drakness"
            fab:fab_colorRipple="@color/blue_color_drakness" />

    </FrameLayout>

</RelativeLayout>
