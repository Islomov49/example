<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imBorrowPerson"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/credit_icon"
            android:paddingLeft="15dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imBorrowPerson"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBorrowPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Barton Marton"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvBorrowPersonNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dp"
                android:text="+99892454545"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="octatok: "
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvBorrowPersonSumm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250 \$"
                    android:textSize="20sp"
                    android:textColor="#29952e"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvBorrowPersonDateGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data zayma"
                android:textSize="10sp"
                android:textColor="#29952e"
                />

            <TextView
                android:id="@+id/tvBorrowPersonDateRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#d60810"
                android:text="Data vozvrata" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>