<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivBorrowAddPopup"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/credit_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <EditText
                    android:id="@+id/etBorrowAddPopupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number" />

                <EditText
                    android:id="@+id/etBorrowAddPopupNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Number"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btBorrowAddPopupContact"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#8cdde4"
                android:text="From \n contact"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата Займа"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etBorrowAddPopupDataGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="D - M - Y"
            android:textColor="#29952e"
            android:textSize="14sp"
            android:textColorHint="#29952e"
            android:inputType="date"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата Займа"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etBorrowAddPopupDataRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="D - M - Y"
            android:textColor="#d60810"
            android:textColorHint="#d60810"
            android:inputType="date"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schot"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etBorrowAddPopupSumm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Summa"
                android:paddingRight="25dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spBorrowAddPopupValyuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="25dp"
                android:textSize="14sp" />


            <Spinner
                android:id="@+id/spBorrowAddPopupAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btBorrowAddPopupCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Cencel"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btBorrowAddPopupOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>