<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.jim.pocketaccounter"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/toolbar_color"
        android:elevation="@dimen/one_dp"
        android:orientation="horizontal"
        android:translationZ="@dimen/one_dp" >

        <ImageView
            android:id="@+id/ivDrawer"
            android:layout_width="@dimen/fourty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:longClickable="true"
            android:padding="@dimen/ten_dp"
            android:src="@drawable/ic_drawer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="@string/app_name"
                android:textColor="@color/toolbar_text_color"
                android:textSize="@dimen/eighteen_sp" />

            <TextView
                android:id="@+id/tvToolbarSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirtytwo_dp"
                android:text="TextView"
                android:textColor="@color/toolbar_text_color"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivToolbar"
            android:layout_width="@dimen/thirtyfive_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/five_dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    </FrameLayout>

</RelativeLayout>
