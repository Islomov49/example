<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="2dp"
        card:cardMaxElevation="10dp"

        card:cardElevation="5dp"
        card:cardCornerRadius="8dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.jim.pocketaccounter.helper.CircleImageView
                    android:id="@+id/iconaaa"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    card:border_width="2px"
                    card:border_color="@color/green_light_forline"
                    card:border_overlay="true"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvBorrowPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Melesovskiy"
                        android:layout_marginTop="15dp"
                        android:maxLength="50"
                        android:textSize="20sp"
                        android:gravity="bottom"
                        android:textColor="@color/black_for_glavniy_text"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+99894666316"
                        android:textSize="14sp"
                        android:textColor="@color/for_darker"
                        android:id="@+id/tvBorrowPersonNumber"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/totalpayd"
                        android:layout_toStartOf="@+id/totalpayd"
                        android:layout_below="@+id/tvBorrowPersonName" />

                </RelativeLayout>
               </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/green_light_forline"


                android:layout_marginTop="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:paddingTop="6dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:id="@+id/relativeLayout">
                    <RelativeLayout
                        android:id="@+id/rela2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_below="@+id/realrt1"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Return date :"
                            android:textSize="12sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/dateay"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/tvBorrowPersonDateRepeat"
                            android:layout_toStartOf="@+id/tvBorrowPersonDateRepeat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18.06.2016"
                            android:textSize="12sp"
                            android:gravity="bottom"
                            android:textColor="@color/black_for_glavniy_text"
                            android:id="@+id/tvBorrowPersonDateRepeat"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/realrt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.05.2016"
                            android:textSize="12sp"
                            android:gravity="bottom"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black_for_glavniy_text"
                            android:id="@+id/tvBorrowPersonDateGet"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taked date:"
                            android:textSize="12sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/textView2"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_below="@+id/rela2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1240$"
                            android:textSize="12sp"
                            android:gravity="bottom"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/red"
                            android:id="@+id/tvBorrowPersonSumm"
                            android:layout_alignBottom="@+id/textView3"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/verall_debt"
                            android:textSize="12sp"
                            android:textColor="@color/for_darker"
                            android:id="@+id/textView3"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_toLeftOf="@+id/tvBorrowPersonSumm"
                            android:layout_toStartOf="@+id/tvBorrowPersonSumm" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal"

                android:id="@+id/frameLayout"
                android:paddingRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/relativeLayout">
                <TextView
                    android:id="@+id/call_person"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/knopka_zeleniy"
                    android:text="CALL"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/green_light"
                    android:textSize="12sp"
                 />
                <TextView
                    android:id="@+id/pcaay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/knopka_zeleniy"
                    android:text="PAY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="16dp"

                    android:textColor="@color/green_light"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
