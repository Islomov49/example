<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tlDebtBorrowFragment"
        android:background="#d6c8c8"
        />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vpDebtBorrowFragment"
        android:layout_below="@+id/tlDebtBorrowFragment"
        />

    <com.jim.pocketaccounter.helper.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/currency_add"
        android:id="@+id/fbDebtBorrowFragment"
        android:layout_margin="10dp"
        />

</RelativeLayout>